#include <stdio.h>

int main() {
    int arr[] = {2, 7, 11, 15};
    int n = sizeof(arr) / sizeof(arr[0]);
    int target = 9;

    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (arr[i] + arr[j] == target) {
                printf("Two Sum found: arr[%d] = %d and arr[%d] = %d\n", i, arr[i], j, arr[j]);
                return 0; // exit after finding the first pair
            }
        }
    }

    printf("No two numbers add up to %d\n", target);
    return 0;
}
