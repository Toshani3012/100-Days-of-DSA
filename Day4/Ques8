#include <stdio.h>

void removeElement(int arr[], int *n, int key) {
    int i, pos = -1;

    // Find position of element
    for (i = 0; i < *n; i++) {
        if (arr[i] == key) {
            pos = i;
            break;
        }
    }

    if (pos == -1) {
        printf("Element %d not found in array.\n", key);
        return;
    }

    // Shift elements left
    for (i = pos; i < *n - 1; i++) {
        arr[i] = arr[i + 1];
    }

    // Reduce size
    (*n)--;

    printf("Array after removing %d: ", key);
    for (i = 0; i < *n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int main() {
    int arr[] = {1, 2, 3, 4, 5};
    int n = sizeof(arr) / sizeof(arr[0]);
    int key = 3;

    printf("Original array: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    removeElement(arr, &n, key);

    return 0;
}
