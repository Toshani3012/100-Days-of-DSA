#include <stdio.h>
#include <string.h>

// Recursive function to print string in reverse
void mirrorFormat(char str[], int index) {
    if (index < 0) {
        return;  // Base case: stop when index goes below 0
    }
    printf("%c", str[index]);  // Print current character
    mirrorFormat(str, index - 1);  // Recursive call with previous index
}

int main() {
    char codeName[100];
    printf("Enter the code name: ");
    scanf("%s", codeName);

    int length = strlen(codeName);
    printf("Mirror format: ");
    mirrorFormat(codeName, length - 1);

    return 0;
}
