#include <stdio.h>

// Recursive function to compute 2^n
int powerOfTwo(int n) {
    if (n == 0) {
        return 1;  // Base case: 2^0 = 1
    } else {
        return 2 * powerOfTwo(n - 1);  // Recursive step
    }
}

int main() {
    int n;
    printf("Enter the exponent (n): ");
    scanf("%d", &n);

    if (n < 0) {
        printf("Negative exponents are not supported in this program.\n");
    } else {
        printf("2^%d = %d\n", n, powerOfTwo(n));
    }

    return 0;
}
