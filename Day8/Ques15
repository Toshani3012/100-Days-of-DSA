#include <stdio.h>

// Recursive function to calculate a^b
int power(int a, int b) {
    if (b == 0) {
        return 1;  // Base case: any number to power 0 is 1
    } else {
        return a * power(a, b - 1);  // Recursive step
    }
}

int main() {
    int a, b;
    printf("Enter base (a): ");
    scanf("%d", &a);
    printf("Enter exponent (b): ");
    scanf("%d", &b);

    if (b < 0) {
        printf("Negative exponents are not supported in this program.\n");
    } else {
        printf("%d^%d = %d\n", a, b, power(a, b));
    }

    return 0;
}
